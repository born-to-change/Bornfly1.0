<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#6852e0"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    >
    <Button
        android:id="@+id/btnSave"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/savediary"
        android:layout_marginLeft="35dp"

        />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/canclediary"
        android:layout_marginLeft="35dp"
        />

    <Button
        android:id="@+id/btnAddPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/photograph"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/btnAddVideo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/recordvideo"
        android:layout_marginLeft="35dp"/>

</LinearLayout>